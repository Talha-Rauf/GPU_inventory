
<%- include('include/_header') %>

<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/252.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="container container-sm">
        <div class="card mx-4 mx-md-5 shadow-5-strong"
             style="
             margin-top: -100px;
             background: hsla(0, 0%, 100%, 0.8);
             backdrop-filter: blur(30px);">

            <div class="card-body py-5 px-md-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="fw-bold mb-5">
                            UPDATE PROFILE
                            <i class="fa <%= user.gender === 'Male' ? 'fa-male' : 'fa-female'%>"></i>
                        </h2>
                        <hr>


                        <form action=" <%= "/users/update-user/" + user.id + "?_method=PATCH"%> " method="POST" id="update_user">

                            <%- include('include/_editForm', {data: 'user'}); %>

                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>

</section>

<%- include('include/_footer') %>