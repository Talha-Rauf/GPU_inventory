<form action="/gpu/delete" method="POST">

  <h3>Delete an Entry from the inventory:</h3>

  <label for="companyName" class="form-label">Company Name:</label>
  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="AMD, Nvidia, etc..." aria-label="Company Name" aria-describedby="basic-addon1" required>
  </div>

  <label for="gpuModel" class="form-label">GPU Model:</label>
  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Model name..." aria-label="GPU Model" aria-describedby="basic-addon1" required>
  </div>

  <button type="reset" id="cancelBtn" class="btn btn-primary">Reset</button>
  <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>

</form>
