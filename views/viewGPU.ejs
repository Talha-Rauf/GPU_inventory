
<%- include('include/_header') %>

<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/252.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="container container-sm">
        <div class="card mx-4 mx-md-5 shadow-5-strong mb-5"
             style="
             margin-top: -100px;
             background: hsla(0, 0%, 100%, 0.8);
             backdrop-filter: blur(30px);">

            <div class="card-body py-5 px-md-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="fw-bold mb-3">GPU DETAILS</h2>
                        <hr>
                    </div>
                </div>

                <table class="table table-fixed table-borderless table-sm table-responsive-lg text-right mb-3">

                    <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <td class="text-bold">Company:</td>
                        <td class="text-left"><%= gpu.company %></td>
                    </tr>
                    <tr>
                        <td class="text-bold">Model:</td>
                        <td class="text-left"><%= gpu.model %></td>
                    </tr>
                    <tr>
                        <td class="text-bold">Size:</td>
                        <td class="text-left"><%= gpu.size %></td>
                    </tr>
                    <tr>
                        <td class="text-bold">Condition:</td>
                        <td class="text-left"><%= gpu.condition %></td>
                    </tr>
                    <tr>
                        <td class="text-bold">Details:</td>
                        <td class="text-left"><%= gpu.details %></td>
                    </tr>
                    </tbody>

                </table>

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">

                        <% if (gpu.assignedID === user.id) {%>
                            <a href=" <%= "/gpu/update-gpu/" + gpu.id%> ">
                                <button type="button" class="btn btn-dark btn-lg btn-rounded px-5 mr-3">Edit</button>
                            </a>
                        <% } %>

                        <a href="/gpu">
                            <button type="button" class="btn btn-dark btn-lg btn-rounded px-5 mr-3">BACK</button>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>


<%- include('include/_footer') %>