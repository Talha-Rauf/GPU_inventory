<div class="form-group">
    <label for="firstName" class="text-bold">First Name:</label>
    <input type="text" id="firstName" name="firstName" placeholder="John">
</div>

<div class="form-group">
    <label for="lastName" class="text-bold">Last Name:</label>
    <input type="text" id="lastName" name="lastName" placeholder="Wick">
</div>

<div class="form-group">
    <label for="email" class="text-bold">Email:</label>
    <input type="email" id="email" name="email" placeholder="example@gmail.com">
</div>

<div class="form-group">
    <label for="password" class="text-bold">Password:</label>
    <input type="password" id="password" name="password" placeholder="abc123">
</div>

<div class="form-group">
    <label for="gender" class="text-bold">Gender:</label>
    <div class="radio inline">
        <input type="radio" id="radio-1" name="gender" value="Male">
        <label for="radio-1" class="radio-label">Male</label>
    </div>
    <div class="radio inline">
        <input type="radio" id="radio-2" name="gender" value="Female">
        <label for="radio-2" class="radio-label">Female</label>
    </div>
</div>

<div class="form-group">
    <label for="status" class="text-bold">Status:</label>
    <div class="radio inline">
        <input type="radio" id="radio-3" name="status" value="Employed">
        <label for="radio-3" class="radio-label">Employed</label>
    </div>
    <div class="radio inline">
        <input type="radio" id="radio-4" name="status" value="Unemployed">
        <label for="radio-4" class="radio-label">Unemployed</label>
    </div>
</div>

<input type="submit" class="btn btn-primary" value="SUBMIT">
<input type="reset" class="btn btn-primary" value="RESET">