<!--MDB Tables-->
<div class="container mt-4 align-content-center">

    <div class="card mb-4">
        <div class="card-body">
            <!-- Grid row -->
            <div class="row">
                <!-- Grid column -->
                <div class="col-md-12">
                    <h2 class="pt-3 pb-2 text-center font-bold font-up">GPU Table <i class="fa fa-computer-mouse"></i></h2>
                    <a href="/users/add-user" class="btn btn-sm btn-primary text-center"><i class="fa fa-plus-circle"></i> Add New</a>
                    <div class="input-group md-form form-sm form-2 pl-0 pr-2 mt-3">
                        <input class="form-control my-2 py-1 pl-3" type="search" placeholder="Search user here..." aria-label="Search">
                    </div>
                </div>
                <!-- Grid column -->
            </div>
            <!-- Grid row -->
            <!--Table-->
            <table class="table table-striped table-responsive-lg text-center">
                <!--Table head-->
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">COMPANY</th>
                    <th scope="col">MODEL</th>
                    <th scope="col">SIZE</th>
                    <th scope="col">CONDITION</th>
                    <th scope="col">ACTION</th>
                </tr>
                </thead>
                <!--Table head-->
                <!--Table body-->
                <tbody>
                <% for (var i = 0; i < gpu.length; i++) { %>

                    <% if (gpu[i].assignedID === user.id) {%>

                        <tr>
                            <th scope="row"><%= i + 1%></th>
                            <td><%= gpu[i].company %></td>
                            <td><%= gpu[i].model %></td>
                            <td><%= gpu[i].size %></td>
                            <td><%= gpu[i].condition %></td>
                            <td>
                                <a href=" <%= "/userpage/" + gpu[i].id %> " class="btn btn-sm btn-success"><i class="fa fa-search"></i></a>
                                <a href=" <%= "/userpage/update-gpu/" + gpu[i].id %> " class="btn btn-sm btn-primary"><i class="fa fa-pencil-alt"></i></a>
                                <a href=" <%= "/userpage/delete-gpu/" + gpu[i].id %> " class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>

                    <%}%>

                <% } %>
                </tbody>
                <!--Table body-->
            </table>
            <!--Table-->
        </div>
    </div>

</div>
<!--MDB Tables-->
