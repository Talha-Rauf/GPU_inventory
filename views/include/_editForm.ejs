<div class="form-group">
    <label for="firstName" class="text-bold">First Name:</label>
    <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>">
</div>

<div class="form-group">
    <label for="lastName" class="text-bold">Last Name:</label>
    <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>">
</div>

<div class="form-group">
    <label for="email" class="text-bold">Email:</label>
    <input type="email" id="email" name="email" value="<%= user.email %>">
</div>

<div class="form-group">
    <label for="password" class="text-bold">Password:</label>
    <input type="password" id="password" name="password" value="">
</div>

<div class="form-group">
    <label for="gender" class="text-bold">Gender:</label>
    <div class="radio inline">
        <input type="radio" id="radio-1" name="gender" value="Male" <%= user.gender === 'Male' ? 'checked' : ''%> >
        <label for="radio-1" class="radio-label">Male</label>
    </div>
    <div class="radio inline">
        <input type="radio" id="radio-2" name="gender" value="Female" <%= user.gender === 'Female' ? 'checked' : ''%> >
        <label for="radio-2" class="radio-label">Female</label>
    </div>
</div>

<div class="form-group">
    <label for="status" class="text-bold">Status:</label>
    <div class="radio inline">
        <input type="radio" id="radio-3" name="status" value="Employed" <%= user.status === 'Employed' ? 'checked' : ''%> >
        <label for="radio-3" class="radio-label">Employed</label>
    </div>
    <div class="radio inline">
        <input type="radio" id="radio-4" name="status" value="Unemployed" <%= user.status === 'Unemployed' ? 'checked' : ''%> >
        <label for="radio-4" class="radio-label">Unemployed</label>
    </div>
</div>

<div class="form-group">
    <label for="role" class="text-bold">Role:</label>
    <div class="radio inline">
        <input type="radio" id="radio-5" name="role" value="admin" <%= user.role === 'admin' ? 'checked' : ''%> >
        <label for="radio-5" class="radio-label">Admin</label>
    </div>
    <div class="radio inline">
        <input type="radio" id="radio-6" name="role" value="user" <%= user.role === 'user' ? 'checked' : ''%> >
        <label for="radio-6" class="radio-label">User</label>
    </div>
</div>