
<%- include('include/_header') %>

<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/252.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="container container-sm">
        <div class="card mx-4 mx-md-5 shadow-5-strong"
             style="
             margin-top: -100px;
             background: hsla(0, 0%, 100%, 0.8);
             backdrop-filter: blur(30px);">

            <div class="card-body py-5 px-md-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <img src=" <%= "/public/avatars/" + user.id + ".png" %> " class="rounded-circle" style="width: 150px;" alt="Avatar" />
                        <h2 class="fw-bold mb-3"><%= user.firstName + " " + user.lastName %></h2>
                        <hr>
                    </div>
                </div>

                <div class="row d-flex justify-content-center mb-3">
                    <div class="col-lg-8 text-left">
                        <h3 class="">Email: <%= user.email %></h3>
                        <h3 class="">Gender: <%= user.gender %></h3>
                        <h3 class="">Status: <%= user.status %></h3>
                        <h3 class="">Role: <%= user.role %></h3>
                    </div>
                </div>

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <a href=" <%= "/users/update-user/" + user.id%> ">
                            <button type="button" class="btn btn-dark btn-lg btn-rounded px-5 mr-3">Edit</button>
                        </a>

                        <a href="/users">
                            <button type="button" class="btn btn-dark btn-lg btn-rounded px-5 mr-3">BACK</button>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>


<%- include('include/_footer') %>