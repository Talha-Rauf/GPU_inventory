<%- include('include/_header') %>

<section class="vh-100">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbootstrap.com/img/new/textures/full/252.jpg"
                     alt="Login image" class="w-100 vh-100 bg-image-vertical" style="object-fit: cover; object-position: left;">
            </div>

            <div class="col-sm-6 text-black">

                <div class="row justify-content-center mb-lg-0 h-custom-2 mt-5 pt-5 mr-3">
                    <div class="card shadow-5-strong mb-5 ml-5"
                         style="width: 24rem; margin-top: -100px; background: hsla(0, 0%, 100%, 0.6); backdrop-filter: blur(30px);">

                        <div class="card-body py-5 px-md-5">
                            <div class="text-center">

                                <h2 class="fw-bold mb-4">LOGIN <i class="fa fa-sign-in-alt"></i></h2>

                                <form action="/login" method="POST" id="user-login">

                                    <%- include('include/_loginForm') %>

                                </form>

                                <div class="mt-2"><a href="/reset">Forgot Password</a></div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</section>

<%- include('include/_footer') %>