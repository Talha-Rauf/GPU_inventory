<body>

<section class="myForm">
<!--    <div class="bg-image h-100" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.webp');">-->
        <div class="mask d-flex align-items-center h-100" style="background-color: rgba(255,255,255,.6);">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card gradient-custom" style="border-radius: 1rem; background: linear-gradient(to bottom, rgba(29,51,199,0.45), rgba(140,35,210,0.7));">
                            <div class="card-body p-5 text-center">
                                <div class="my-md-5">

                                    <div class="text-center pt-1">
                                        <i class="fas fa-user-tie text-white fa-4x"></i>
                                        <h1 class="fw-bold my-5 text-white text-uppercase">log in</h1>
                                    </div>

                                    <form action="/login" method="POST" id="user-login">

                                        <!--In case of wrong username or password, error msg will appear-->
                                        <% if (errorMessage) {%>
                                            <%= errorMessage %>
                                        <% } %>

                                        <div class="form-outline form-white mb-4">
                                            <input id="typeEmail" type="email" class="form-control form-control-lg" name="email">
                                            <label for="typeEmail" class="form-label">Email</label>
                                        </div>

                                        <div class="form-outline form-white mb-4">
                                            <input id="typePassword" type="password" class="form-control form-control-lg" name="password">
                                            <label for="typePassword" class="form-label">Password</label>
                                        </div>


                                        <button class="btn btn-light btn-lg btn-rounded px-5" type="submit">LOGIN</button>
                                        <a href="/"><button class="btn btn-light btn-lg btn-rounded px-5" type="button">BACK</button></a>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<!--    </div>-->
</section>

