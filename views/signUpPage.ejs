
<%- include('include/_header') %>

<section class="vh-100">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbootstrap.com/img/new/textures/full/252.jpg"
                     alt="Login image" class="w-100 vh-100 bg-image-vertical" style="object-fit: cover; object-position: left;">
            </div>

            <div class="col-sm-6 text-black">

                <div class="row justify-content-center mb-5 mb-lg-0 pt-4 mr-2 ml-2">
                    <div class="card shadow-5-strong mb-2 mt-0"
                         style="margin-top: -100px; background: hsla(0, 0%, 100%, 0.8); backdrop-filter: blur(30px);">

                        <div class="card-body py-5 px-md-5">
                            <div class="text-center">

                                <h2 class="fw-bold mb-5">SIGN UP <i class="fa fa-thumbs-up"></i></h2>

                                <% if (errorMessage) {%>
                                    <div class="error-message"><%= errorMessage %></div>
                                <% } %>

                                <form action="/signup" method="POST" id="user-signup">

                                    <%- include('include/_signUpForm') %>

                                </form>

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</section>



<%- include('include/_footer') %>
