
<%- include('include/_header') %>

<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/252.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="container container-sm">
        <div class="card mx-4 mx-md-5 shadow-5-strong"
             style="
             margin-top: -200px;
             background: hsla(0, 0%, 100%, 0.8);
             backdrop-filter: blur(30px);">

            <div class="card-body py-5 px-md-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8 mb-3">
                        <h2 class="fw-bold mb-5">
                            UPLOAD AVATAR <i class="fa fa-image-portrait"></i>
                        </h2>

                        <form action=" <%= "/userpage/update-user/upload-image/" + userID%> " method="POST" enctype="multipart/form-data">
                            <input type="file" class="form-control-file" name="image" /><hr>

                            <% if (errorMessage) {%>
                                <div class="error-message"><%= errorMessage %></div>
                            <% } %>

                            <button class="btn btn-dark btn-lg btn-rounded px-5 mr-3" type="submit">SUBMIT</button>
                            <a href=" <%= "/userpage/update-user/" + userID %> "><button class="btn btn-dark btn-lg btn-rounded px-5" type="button">BACK</button></a>
                        </form>

                    </div>

                    <p>--- maximum upload size: 10MB ---</p>
                    <p>--- acceptable file type: jpeg ---</p>
                </div>
            </div>

        </div>
    </div>

</section>

<%- include('include/_footer') %>